{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Trustcar API",
    "description": "API for Trustcar used car inspection app"
  },
  "host": "localhost:8080",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "/v1/user/authenticate": {
      "post": {
        "summary": "Get authentication token",
        "description": "Retrieves authentication token with given credentials.",
        "operationId": "postAuthenticate",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User credentials",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserCredentials"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authentication token successfully retrieved",
            "schema": {
              "$ref": "#/definitions/AuthToken"
            }
          },
          "400": {
            "description": "Invalid username or password supplied"
          },
          "401": {
            "description": "Authentication failed"
          }
        }
      }
    },
    "/v1/registerUser": {
      "post": {
        "summary": "Register user, returns new id",
        "description": "Creates new user with email and password.",
        "operationId": "postRegisterUser",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User credentials",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserCredentials"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authentication token successfully retrieved",
            "schema": {
              "$ref": "#/definitions/AuthToken"
            }
          },
          "400": {
            "description": "Invalid username or password supplied"
          },
          "401": {
            "description": "Authentication failed"
          }
        }
      }
    },
    "/v1/forgotPassword": {

    },
    "/v1/docs": {
      "get": {
        "summary": "Get Swagger documentation",
        "description": "Returns Swagger documentation JSON.",
        "operationId": "getDocs",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Swagger documentation JSON successfully retrieved",
            "schema": {
              "type": "object",
              "description": "Swagger JSON"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserCredentials": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "AuthToken": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "expires": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
